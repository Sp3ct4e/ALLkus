<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/gradient"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".add_data">






<LinearLayout
    android:orientation="vertical"
    android:layout_marginTop="50dp"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alkohole wysokooktanowe"
        android:layout_marginTop="50dp"/>



    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        >
        <RadioButton android:id="@+id/radio_Tequila"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio1"
            />
        <RadioButton android:id="@+id/radio_Gin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio2"
            />
        <RadioButton android:id="@+id/radio_wodka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio3"
            />
        <RadioButton android:id="@+id/radio_whiskey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio4"
            />

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alkohole niskoktanowe"
        android:layout_marginTop="50dp"/>



    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"

        >
        <RadioButton android:id="@+id/radio_piwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio5"
            />
        <RadioButton android:id="@+id/radio_wino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio6"
            />
        <RadioButton android:id="@+id/radio_drink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio7"
            />

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ile procent?"
        android:layout_marginTop="50dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/percent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ile kasy wydano?"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/money"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ile razy?"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/how_much"/>
    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="zapisz"
        android:background="@drawable/shapebutton"/>





</LinearLayout>







</RelativeLayout>